<div class="table-responsive-lg">
  <table id="myTable" class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th onclick="sortTable(0)">No</th>
        <th onclick="sortTable(1)">Average System Response</th>
        <th onclick="sortTable(2)">Branch Code</th>
        <th onclick="sortTable(3)">Current Ping Response</th>
        <th onclick="sortTable(4)">Email Date</th>
        <th onclick="sortTable(5)">Host Previously DOWN for</th>
        <th onclick="sortTable(6)">Host Previously UP for</th>
        <th onclick="sortTable(7)">Last Date Checked DOWN</th>
        <th onclick="sortTable(8)">Last Date Checked UP</th>
        <th onclick="sortTable(9)">Location</th>
        <th onclick="sortTable(10)">Name</th>
        <th onclick="sortTable(11)">Note</th>
        <th onclick="sortTable(12)">Status</th>
        <th onclick="sortTable(13)">System Availability</th>
        <th onclick="sortTable(14)">Total Checks Since Clear</th>
        <th onclick="sortTable(15)">Total Failed Checks</th>
        <th onclick="sortTable(16)">Uptime</th>
        <th onclick="sortTable(17)">System</th>
      </tr>
      <% if (!data || data.length == 0) { %>
        <tr><td colspan="4" class="text-center"><i>No data!</i></td></tr>
        <% } else { %>
          <% data.forEach((dataapi, index) => { %>
            <tr>
              <td><%= (current-1)*limit+index+1 %></td>
              <td><%= dataapi.Average_System_Response %></td>
              <td><%= dataapi.Branch_Code %></td>
              <td><%= dataapi.Current_Ping_Response %></td>
              <td><%= dataapi.EmailDate %></td>
              <td><%= dataapi.Host_Previously_DOWN_for %></td>
              <td><%= dataapi.Host_Previously_UP_for %></td>
              <td><%= dataapi.Last_Date_Checked_DOWN %></td>
              <td><%= dataapi.Last_Date_Checked_UP %></td>
              <td><%= dataapi.Location %></td>
              <td><%= dataapi.Name %></td>
              <td><%= dataapi.Note %></td>
              <td><%= dataapi.Status %></td>
              <td><%= dataapi.System_Availability %></td>
              <td><%= dataapi.Total_Checks_Since_Clear %></td>
              <td><%= dataapi.Total_Failed_Checks %></td>
              <td><%= dataapi.Uptime %></td>
              <td><%= dataapi.system %></td>
            </tr>
          <% }) %>
        <% } %>
    </thead>
  </table>

  <!-- pagination -->
  <% if (pages > 0) { %>
  <nav aria-label="Page navigation">
  <ul class="pagination text-center">
  <% if (current == 1) { %>
  <li class="page-item disabled"><a class="page-link">First</a></li>
  <% } else { %>
  <li><a class="page-link" href="/?page=1">First</a></li>
  <% } %>
  <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
  <% if (i !== 1) { %>
  <li class="page-item disabled"><a class="page-link">...</a></li>
  <% } %>
  <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
  <% if (i == current) { %>
  <li class="page-item active"><a class="page-link"><%= i %></a></li>
  <% } else { %>
  <li><a class="page-link" href="/?page=<%= i %>"><%= i %></a></li>
  <% } %>
  <% if (i == Number(current) + 4 && i < pages) { %>
  <li class="page-item disabled"><a class="page-link">...</a></li>
  <% } %>
  <% } %>
  <% if (current == pages) { %>
  <li class="page-item disabled"><a class="page-link">Last</a></li>
  <% } else { %>
  <li><a class="page-link" href="/?page=<%= pages %>">Last</a></li>
  <% } %>
  </ul>
  </nav>
  <% } %>
  
</div>
<%- contentFor('title') %>
Data API To Table